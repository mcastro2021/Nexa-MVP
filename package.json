{
  "name": "constructora-e2e",
  "version": "1.0.0",
  "description": "Plataforma E2E para Constructora con gestiÃ³n completa de proyectos, stock, RRHH y KPIs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:worker": "npm run dev --workspace=apps/worker",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "build:worker": "npm run build --workspace=apps/worker",
    "start": "npm run start --workspaces",
    "db:generate": "npm run prisma:generate --workspace=apps/api",
    "db:migrate": "npm run prisma:migrate --workspace=apps/api",
    "db:seed": "npm run seed --workspace=apps/api",
    "db:studio": "npm run prisma:studio --workspace=apps/api",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "constructora",
    "wood-frame",
    "steel-frame",
    "gestion-proyectos",
    "erp",
    "nextjs",
    "fastify",
    "prisma",
    "postgresql"
  ],
  "author": "Equipo Nexa-MVP",
  "license": "MIT"
}
